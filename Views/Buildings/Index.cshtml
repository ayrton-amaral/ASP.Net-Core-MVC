@model IEnumerable<PropertyRentalManagement.Models.Building>

@{
    ViewData["Title"] = "Building Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <h1>Building Registration</h1>
            <br>
            <p>
                <a asp-action="Create" class="btn btn-primary custom-button">Register a New Building</a>
            </p>
            <br>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuildingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manager)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BuildingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.CityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.Username)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.BuildingId" style="color: #2E6C55;">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.BuildingId" style="color: #2E6C55;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.BuildingId" style="color: #2E6C55;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
