@model PropertyRentalManagement.Models.Message

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <h1>Messages</h1>
            <br>
            <h4>Send a Message</h4>
        </div>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SenderId" class="control-label"></label>
                <select asp-for="SenderId" class ="form-control" asp-items="ViewBag.SenderId" ></select>
            </div>
            <br>

            <div class="form-group">
                <label asp-for="ReceiverId" class="control-label"></label>
                <select asp-for="ReceiverId" class ="form-control" asp-items="ViewBag.ReceiverId"></select>
            </div>
            <br>

            <div class="form-group">
                <label asp-for="MessageContent" class="control-label"></label>
                <textarea asp-for="MessageContent" class="form-control"></textarea>
                <span asp-validation-for="MessageContent" class="text-danger"></span>
            </div>
            <br>

            <div class="form-group">
                <input type="submit" value="Send Message" class="btn btn-primary custom-button" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
