@model IEnumerable<PropertyRentalManagement.Models.Message>

@{
    ViewData["Title"] = "Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <h1>Messages</h1>
            <br>
            <p>
                <a asp-action="Create" class="btn btn-primary custom-button">Send a Message</a>
            </p>
        </div>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MessageContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Receiver)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MessageContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Receiver.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sender.Username)
            </td>
            <td>
                    <a asp-action="Details" asp-route-id="@item.MessageId" style="color: #2E6C55;">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.MessageId" style="color: #2E6C55;">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
